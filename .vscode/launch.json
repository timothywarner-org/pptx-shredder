{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üéØ Run PPTX Shredder",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/shred.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": []
        },
        {
            "name": "üîç Debug PPTX Shredder (Dry Run)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/shred.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": ["--dry-run", "--verbose"]
        },
        {
            "name": "üóÇÔ∏è Debug with Sample File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/shred.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": ["${input:sampleFile}", "--verbose"]
        },
        {
            "name": "üß™ Run All Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": ["tests/", "-v", "--tb=short"]
        },
        {
            "name": "üî¨ Run Tests with Coverage",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": ["tests/", "-v", "--cov=src", "--cov-report=html", "--cov-report=term-missing"]
        },
        {
            "name": "‚ö° Debug Single Test",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": ["${input:testFile}", "-v", "-s"]
        },
        {
            "name": "üèÉ‚Äç‚ôÇÔ∏è Quick Test (No Coverage)",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": ["tests/", "-x", "--tb=line"]
        },
        {
            "name": "üìä Debug Extractor Only",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/extractor.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": ["${input:pptxFile}"]
        },
        {
            "name": "üé® Debug Formatter Only", 
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/formatter.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ],
    "inputs": [
        {
            "id": "sampleFile",
            "description": "Path to PPTX file",
            "default": "input/azure_storage_training.pptx",
            "type": "promptString"
        },
        {
            "id": "testFile", 
            "description": "Test file to run",
            "default": "tests/test_extractor.py",
            "type": "promptString"
        },
        {
            "id": "pptxFile",
            "description": "PPTX file for extractor debugging",
            "default": "input/azure_storage_training.pptx",
            "type": "promptString"
        }
    ]
}